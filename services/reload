#!/usr/bin/env bash

source  ./services/_init.sh

svc=${1}
shift

if [ -x ./services/${svc}/svc-reload ] ; then
    ./services/${svc}/svc-reload     ${EO_HOST}  $@
else
    ./services/run                   ${EO_HOST}  <<EOF
#!/usr/bin/env bash

set -e

command -v systemctl > /dev/null 2>&1 && {
    systemctl is-enabled ${svc}.service > /dev/null 2>&1    || {
        systemctl   enable              ${svc}.service
    }
    systemctl is-active ${svc}.service > /dev/null 2>&1     && {
        systemctl   reload-or-restart   ${svc}.service
    }   ||  {
        systemctl   start               ${svc}.service
    }
    echo        ----------------------
    systemctl   status                  ${svc}.service      ||  true
}
command -v systemctl > /dev/null 2>&1 || {
    chkconfig   ${svc}      on
    service     ${svc}      reload
    echo        ----------------------
    service     ${svc}      status      ||  true
}

exit    0
EOF
fi
