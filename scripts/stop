#!/usr/bin/env bash

source  ./scripts/_init.sh

svc=${1}
shift

if [ -x ./scripts/${svc}/svc-stop ] ; then
    ./scripts/${svc}/svc-stop   ${EO_HOST}  $@
else
    ./scripts/run               ${EO_HOST}  <<EOF
#!/usr/bin/env bash

set -e

command -v systemctl > /dev/null 2>&1 && {
    systemctl   is-active   ${svc}.service > /dev/null 2>&1   && {
        systemctl   stop    ${svc}.service
    }
    systemctl   disable ${svc}.service
    echo        ----------------------
    systemctl   status  ${svc}.service      ||  echo ''
}

command -v systemctl > /dev/null 2>&1 || {
    chkconfig   ${svc}  off
    service     ${svc}  stop
    echo        ----------------------
    service     ${svc}  status      ||  echo ''
}

exit    0
EOF
fi

exit    0
