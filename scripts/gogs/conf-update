#!/usr/bin/env bash

source  ./scripts/_init.sh

EO_SVC=gogs

INSTALL_ROOT=/home/git

for conf_dir in gogs/custom ; do
    if [ -d "${EO_CONF}/${EO_SVC}/${conf_dir}" ] ;then
        ./scripts/sync  "${EO_CONF}/${EO_SVC}/${conf_dir}/"  "${EO_HOST}:${INSTALL_ROOT}/${conf_dir}/" \
            --exclude="dummy"
    fi
done

./scripts/run   ${EO_HOST}    <<EOF
    command -v systemctl > /dev/null 2>&1 && {
        systemctl   enable  ${INSTALL_ROOT}/gogs/scripts/systemd/gogs.service
    }
    command -v systemctl > /dev/null 2>&1 || {
        cp          -f      ${INSTALL_ROOT}/gogs/scripts/init/centos/gogs  /etc/init.d/
        chomod      755     /etc/init.d/gogs
    }
EOF

./scripts/reload    ${EO_HOST}  gogs
