#!/usr/bin/env bash

set -e

if [ "${1}" = "" ] ;then
    host=${EASY_OP_SSH_HOST}
else
    host=${1}
fi

ssh   ${host}  <<EOF
#!/usr/bin/env bash

set -e

yum list installed  crontabs   >/dev/null 2>&1  ||   yum     install -y  crontabs cronie cronie-anacron

exit    0
EOF

./scripts/crond/conf-update ${host}
